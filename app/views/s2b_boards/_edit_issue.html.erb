<div class="edit_form clearfix" id="edit_issue_<%= issue.id %>" value="<%= issue.id %>">
  <form name="screen-board" id="update_issue_<%= issue.id %>" novalidate="novalidate">
  	<% if issue.id %>
   	  <input type="hidden" name="issue[id]" value="<%= issue.id %>"/>
  	<% end %>
  	<input type="hidden" name="project_id" value="<%= @project.id %>"/>
    <input type="hidden" name="issue[project_id]" value="<%= @project.id %>"/>
  	<input type="hidden" name="issue[author_id]" value="<%= User.current.id %>"/>
  
    <input name="issue[subject]" class="value_content issue_subject" id="new_subject_<%= issue.id %>" type="text" value="<%= issue.subject %>">
    <textarea name="issue[description]" class="value_content issue_description" id="new_description_<%= issue.id %>" style="height: 150px;margin-top:0"><%= issue.description %></textarea></p>
    
    <div id="p_sprint_<%= issue.id %>">
      <span style="font-size: 11px"><%= l(:label_tracker) %></span>
      <select class="value_content" name="issue[tracker_id]" id="new_tracker_<%= issue.id %>" >
        <% @tracker.each do |tracker| %>
            <option value="<%= tracker.id %>" <%= "selected" if tracker.id == issue.tracker_id %>><%= tracker.name %></option>
        <% end %>
      </select>
      <span class=""><%= l(:label_sprint) %></span>
      <select class="value_content" name="issue[fixed_version_id]" id="new_sprint_<%= issue.id %>">
        <option></option>
        <% @sprints.each do |sprint| %>
          <option value="<%= sprint.id %>"  <%= "selected" if sprint.id == issue.fixed_version_id %>><%= sprint.name %></option>
        <% end %>
      </select>
    </div>
      
    <div id="p_assignee_<%= issue.id %>">
      <span><%= l(:label_head_issue_assignee)%> </span>
      <select class="value_content" name="issue[assigned_to_id]" id="new_assignee_<%= issue.id %>">
        <option></option>
        <option value="<%= User.current.id %>" <%= "selected" if issue.assigned_to_id == User.current.id %>><%= l(:label_me) %></option>
        <% @member.each do |assignee| %>
            <option value="<%= assignee.id %>"  <%= "selected" if assignee.id == issue.assigned_to_id %>><%= assignee.name %></option>
        <% end %>
      </select>
      <span><%= l(:label_priority)%> </span>
      <select class="value_content" name="issue[priority_id]" id="new_priority_<%= issue.id %>">
        <% @priority.each do |priority| %>
            <option value="<%= priority.id %>" <%= "selected" if priority.id == issue.priority_id %>><%= priority.name %></option>
        <% end %>
      </select>
    </div>

    <div>
      <span class=""><%= l(:label_start_date)%></span>
      <input class="value_content" name="issue[start_date]" id="new_date_start_<%= issue.id %>"  value="<%= format_date(issue.start_date) %>">
      <span class="" ><%= l(:label_end_date)%></span>
      <input class="value_content" name="issue[due_date]"  id="new_date_end_<%= issue.id %>" value="<%= format_date(issue.due_date) %>"/>
    </div>
    
    <div id="p_time_<%= issue.id %>">
      <span class="" style="text-align:justify; white-space: nowrap;"><%= l(:label_head_issue_est_time) %> </span>
      <input class="input-mini value_content" name="issue[estimated_hours]"  id="new_time_<%= issue.id %>" value="<%= issue.estimated_hours %>" style="text"/>
    </div>
    
    <div class="submit_new_issue" value = "<%= issue.id %>">
      <button type="button" class="submit_issue btn-mini btn-primary">
        <%= l(:label_board_edit_btn_submit) %>
      </button>
      <button type="button" class="cancel_issue btn-mini btn-danger">
        <%= l(:label_board_edit_btn_cancel) %>
      </button>
    </div>
  </form>
</div>